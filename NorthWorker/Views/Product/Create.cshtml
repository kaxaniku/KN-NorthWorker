@model NorthWorker.Models.ProductCreationModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add New Product</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="ProductName" class="form-label font-weight-bold"></label>
                                <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="QuantityPerUnit" class="form-label"></label>
                                <input asp-for="QuantityPerUnit" class="form-control" />
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CategoryId" class="form-label font-weight-bold">Category</label>
                                    <select asp-for="CategoryId"
                                            asp-items="@(new SelectList(@Model.Categories, "Value", "Text"))"
                                            class="form-select">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="SupplierId" class="form-label font-weight-bold">Supplier</label>
                                    <select asp-for="SupplierId"
                                            asp-items="@(new SelectList(@Model.Suppliers, "Value", "Text"))"
                                            class="form-select">
                                        <option value="">-- Select Supplier --</option>
                                    </select>
                                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="UnitPrice" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="UnitsInStock" class="form-label"></label>
                                <input asp-for="UnitsInStock" class="form-control" type="number" />
                                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="UnitsOnOrder" class="form-label"></label>
                                <input asp-for="UnitsOnOrder" class="form-control" type="number" />
                                <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ReorderLevel" class="form-label"></label>
                                <input asp-for="ReorderLevel" class="form-control" type="number" />
                                <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4 border-top pt-3 text-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>